{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-I${workspaceFolder}\\include",
        "-L${workspaceFolder}\\lib",
        "-g",
        "${workspaceFolder}\\src\\*.cpp",
        "${workspaceFolder}\\src\\dataObjects\\*.cpp",
        "${workspaceFolder}\\src\\game\\*.cpp",
        "${workspaceFolder}\\src\\menus\\*.cpp",
        "${workspaceFolder}\\src\\scenes\\*.cpp",
        "-o",
        "${workspaceFolder}\\target\\${fileBasenameNoExtension}.exe",
        "-lmingw32",
        "-lSDL2main",
        "-lSDL2",
        "-lSDL2_ttf",
        "-lSDL2_image",
        "-lSDL2_mixer"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
